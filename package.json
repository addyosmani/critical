    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "jest": {
    "roots": [
      ""
    ]
  }
