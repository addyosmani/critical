{
  "name": "critical",
  "version": "2.0.0-27",
  "description": "Extract & Inline Critical-path CSS from HTML",
  "author": "Addy Osmani",
  "license": "Apache-2.0",
  "repository": "addyosmani/critical",
  "scripts": {
    "jest": "jest --coverage",
    "xo": "xo",
    "test": "npm run xo && npm run jest"
  },
  "files": [
    "cli.js",
    "index.js",
    "src"
  ],
  "bin": "cli.js",
  "keywords": [
    "critical",
    "path",
    "css",
    "optimization"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "chalk": "^4.0.0",
    "clean-css": "^4.2.3",
    "common-tags": "^1.8.0",
    "css-url-parser": "^1.1.3",
    "debug": "^4.1.1",
    "find-up": "^4.1.0",
    "get-stdin": "^8.0.0",
    "globby": "^11.0.0",
    "got": "^9.6.0",
    "group-args": "^0.1.0",
    "indent-string": "^4.0.0",
    "inline-critical": "^6.0.0",
    "is-glob": "^4.0.1",
    "lodash": "^4.17.15",
    "make-dir": "^3.1.0",
    "meow": "^7.0.1",
    "oust": "^1.0.1",
    "p-all": "^3.0.0",
    "penthouse": "^2.2.4",
    "plugin-error": "^1.0.1",
    "postcss": "^7.0.31",
    "postcss-discard": "^1.0.0",
    "postcss-image-inliner": "^4.0.2",
    "postcss-url": "^8.0.0",
    "prettier": "^2.0.5",
    "replace-ext": "^2.0.0",
    "slash": "^3.0.0",
    "tempy": "^0.5.0",
    "through2": "^3.0.1",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "async": "^3.2.0",
    "finalhandler": "^1.1.2",
    "get-port": "^5.1.1",
    "jest": "^26.0.1",
    "nock": "^12.0.3",
    "normalize-newline": "^3.0.0",
    "serve-static": "^1.14.1",
    "stream-array": "^1.1.2",
    "stream-assert": "^2.0.3",
    "vinyl-source-stream": "^2.0.0",
    "xo": "^0.30.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/string-content": "off",
      "unicorn/no-fn-reference-in-iterator": "off"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "jest": {
    "roots": [
      ""
    ]
  }
}
